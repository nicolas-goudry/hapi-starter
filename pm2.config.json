{
  "apps": [{
    "name": "hapi-starter-babel",
    "script": "./node_modules/.bin/babel",
    "args": "src --out-dir build/src --compact false --source-maps --watch"
  }, {
    "name": "hapi-starter-server",
    "script": "node",
    "args": "./build/src/index.js",
    "watch": ["build"],
    "max_restarts": 3,
    "ignore_watch": [
      "build/src/**/*.json"
    ],
    "restart_delay": 10000
  }]
}
